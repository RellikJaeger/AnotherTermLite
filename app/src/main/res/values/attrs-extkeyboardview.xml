<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExtKeyboardView">
        <!-- Default ExtKeyboardView style. -->
        <attr name="extKeyboardViewStyle" format="reference" />
        <!-- Image for the key. This image needs to be a StateListDrawable, with the following
             possible states: normal, pressed, checkable, checkable+pressed, checkable+checked,
             checkable+checked+pressed. -->
        <attr name="keyBackground" format="reference" />
        <!-- Size of the text for one letter character keys. -->
        <attr name="keyTextSize" format="dimension" />
        <!-- Size of the text for custom keys with some text and no icon. -->
        <attr name="labelTextSize" format="dimension" />
        <!-- Color to use for the label in a key. -->
        <attr name="keyTextColor" format="color" />
        <!-- Amount to offset the touch Y coordinate by, for bias correction. -->
        <attr name="verticalCorrection" format="dimension" />
        <!-- Layout resource for popup keyboards. -->
        <attr name="popupLayout" format="reference" />
        <attr name="shadowColor" format="color" />
        <attr name="shadowRadius" format="float" />
        <attr name="autoRepeatDelay" format="integer" />
        <attr name="autoRepeatInterval" format="integer" />
        <attr name="popupBackground" format="reference" />
        <attr name="popupDelay" format="integer" />
        <attr name="popupKeyBackground" format="reference" />
        <attr name="popupKeySize" format="dimension" />
        <attr name="popupKeyTextColor" format="color" />
        <attr name="popupShadowColor" format="color" />
        <attr name="popupShadowRadius" format="float" />
    </declare-styleable>

    <style name="AppExtKeyboardViewStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="keyBackground">@color/colorPrimary</item>
        <item name="keyTextSize">14sp</item>
        <item name="keyTextColor">#FFFFFFFF</item>
        <item name="labelTextSize">10sp</item>
        <item name="popupBackground">@android:color/transparent</item>
        <item name="popupDelay">100</item>
        <item name="popupKeyBackground">@color/colorPrimaryDark</item>
        <item name="popupKeySize">48dp</item>
        <item name="popupKeyTextColor">#FFFFFFFF</item>
        <item name="popupShadowColor">#000000</item>
        <item name="popupShadowRadius">16</item>
        <item name="autoRepeatDelay">1000</item>
        <item name="autoRepeatInterval">100</item>
        <item name="shadowColor">#BB000000</item>
        <item name="shadowRadius">8</item>
        <item name="verticalCorrection">0dip</item>
    </style>
</resources>
